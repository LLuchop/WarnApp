<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8B100"
    tools:context=".LinkJuegosActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:background="#00FF1616"
                android:backgroundTint="#00C51C1C"
                android:fontFamily="sans-serif-black"
                android:text="¡Jugá online!"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="277dp"
                android:layout_height="317dp"
                android:layout_marginLeft="50sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="50sp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/wordwall" />

            <Button
                android:id="@+id/prjuego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#242331"
                android:text="Juegos interactivos"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="270dp"
                android:layout_height="197dp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:layout_marginTop="20sp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ssmm" />

            <Button
                android:id="@+id/sgjuego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:backgroundTint="#242331"
                android:text="Imprimí y pintá" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="182dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginRight="50sp"
                android:layout_marginLeft="50sp"
                android:layout_marginTop="30sp"
                app:srcCompat="@drawable/mak" />

            <Button
                android:id="@+id/trcjuego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="50sp"
                android:backgroundTint="#242331"
                android:text="imprimí, pintá y jugá" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>