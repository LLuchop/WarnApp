<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9E0031"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/aprendamos"
        android:layout_width="248dp"
        android:layout_height="66dp"
        android:fontFamily="sans-serif-black"
        android:text="¡Aprendamos sobre incendios forestales!"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/inf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.549" />

    <TextView
        android:id="@+id/inf"
        android:layout_width="356dp"
        android:layout_height="339dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="serif"

        android:text="Los incendios forestales son un fenómeno que se presenta cuando materiales combustibles de bosques, selvas u otros tipos de vegetación, son consumidos en forma incontrolada por el fuego. Estos pueden salirse de control y expandirse fácilmente sobre extensas áreas."
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ExtraText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="267dp"
        android:layout_height="199dp"
        android:layout_marginBottom="44dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bombero" />

    <Button
        android:id="@+id/sigNin"
        android:layout_width="77dp"
        android:layout_height="59dp"
        android:backgroundTint="#E8B100"
        android:text="SIG"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.985"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

</androidx.constraintlayout.widget.ConstraintLayout>